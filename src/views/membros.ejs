
<%- include('./includes/head') %>
<%- include('./includes/nav') %>

    <div class="container">
<div class="row">
  <div class="col-lg-2"></div>

  <div class="col-lg-8 my-3">
    <h1 class="display-1 text-center">Membros</h1>
    <p class="text-center lead">Crie ou edite os membros</p>

    <%- include('./includes/messages') %> 

    <% if(membro._id) { %>
    <form action="/membros/edit/<%= membro._id %>" method="POST">
      <% } else { %>
        <form action="/membros/register" method="POST">
        <% } %>
      <input type="hidden" name="_csrf" value=<%= csrfToken %>>
      <div class="form-group">
        <label>Nome</label>
        <input value = "<%= membro.nome %>" type="text" class="form-control" name="nome" required>
      </div>
      <div class="form-group">
        <label>Descrição</label>
        <input  value = "<%= membro.descricao %>" type="text" class="form-control" name="descricao" required>
      </div>
      <div class="form-group">
        <label>Seu e-mail</label>
        <input  value = "<%= membro.email %>" type="email" class="form-control" name="email" required>
      </div>
      <div class="form-group">
        <label>Telefone</label>
        <input  value = "<%= membro.telefone %>" type="tel" class="form-control" name="telefone" required>
      </div>
      <button type="submit" class="btn btn-primary btn-lg btn-block">Salvar</button>
    </form>
  </div>
    <%- include('./includes/footer') %>
